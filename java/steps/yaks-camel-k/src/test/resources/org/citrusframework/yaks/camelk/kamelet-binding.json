{
  "apiVersion": "camel.apache.org/v1alpha1",
  "kind": "KameletBinding",
  "metadata": {
    "name": "time-source-kafka"
  },
  "spec": {
    "source": {
      "ref": {
        "name": "timer-source",
        "kind": "Kamelet",
        "namespace": "default"
      },
      "properties": {
        "message": "Hello World"
      }
    },
    "sink": {
      "ref": {
        "name": "hello-topic",
        "kind": "KafkaTopic",
        "namespace": "default"
      }
    }
  }
}
